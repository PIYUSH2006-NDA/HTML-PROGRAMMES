<html>
<head>
    <title>rate of interest based of no. of years</title>
</head>
<body>
    <h1><center><font face="arial">rate of interest based of no. of years<br></font></center></h1>
    <script language="JavaScript">
        var p, r, t, si;
        alert("hello");
        p = eval(prompt("enter the principal amount:-"));
        r = eval(prompt("enter the rate of interest :-"));
        t = eval(prompt("enter the time"));

        if (t < 3) {
            r = r * 0.5;
            si = (p * r * t) / 100;
            document.write("since the interest is for 3 year the rate of interest is 0.5<br>");
            document.write("the simple interest is:- " + si);
        }
        else if (t > 3 && t <= 7) {
            r = r * 0.7;
            si = (p * r * t) / 100;
            document.write("since the interest is for 3 to 7 year the rate of interest is 0.7<br>");
            document.write("the simple interest is:- " + si);
        }
        else if (t > 7) {
            r = r * 0.8;
            si = (p * r * t) / 100;
            document.write("since the interest is for more than 7 year the rate of interest is 0.8<br>");
            document.write("the simple interest is:- " + si);
        }
    </script>
</body>
</html>
